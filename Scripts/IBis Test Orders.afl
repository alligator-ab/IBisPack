//eg 108, 128, 17 -> 108.1328125 ( = 108 + 17/128)
// 1, 20000, 3 -> 1.000015
function makePreciseTest(PriceFloor, InvMinTick, NumTick) {
	// NB: for max accuracy, spearate floorPrice from fractional part !!!
	// NB2: don't forget to set TickSize field !
	global testPreciseProduct;
	local f;
	f = StrFormat("%f", NumTick/InvMinTick);
	if (NumTick != 0) f = StrRight(f, StrLen(f)-2); else f = "0";
	return "Ticker: '"+testPreciseProduct+"', LimitPrice: '"+testPriceFloor+"."+f+"' "
		+ ", TickSize: "+StrFormat("%f", 1/InvMinTick);
}

