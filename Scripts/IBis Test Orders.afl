procedure sendOrder(tit, order) {
	global ibis;
	if (ibis.IsConnected()) {
		if (tit != "") PopupWindow("Sending Order:\n\n"+order, tit, 30);
		ibis.placeOrderEx("Transmit: False, "+order);
	} else {
		PopupWindow("IBis NOT CONNECTED: Cannot Send Order:\n\n"+order, "IBIS NOT CONNECTED", 30);
	}
}

